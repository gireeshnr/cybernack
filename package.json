{
  "name": "mern",
  "description": "CRUD in MongoDB, Express, React/Hooks, Node",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node server/src/index.js",
    "server": "npm run start --prefix server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "eslint --fix **/src/",
    "precommit": "npm test",
    "prepush": "npm test",
    "heroku:add": "heroku git:remote -a",
    "deploy:heroku": "git subtree push --prefix server heroku master",
    "build": "npm install --prefix client && npm run build --prefix client"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=6.0.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amazingandyyy/mern.git"
  },
  "keywords": [
    "react"
  ],
  "author": "Amazingandyyy <amazingandyyy@gmail.com> (Andy Chen)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amazingandyyy/mern/issues"
  },
  "homepage": "https://github.com/amazingandyyy/mern#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.9",
    "@babel/preset-react": "^7.25.9",
    "concurrently": "^6.5.1",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "husky": "^0.14.3",
    "nodemon": "^3.1.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}